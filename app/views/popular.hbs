{{> popular/popularBarChart}}

<ol class="list">
	{{#each searchTerms}}
		<li>
			{{index @index}}.
			<a href="/search/term/{{this.[0]}}/{{../type}}">
				 {{this.[0]}}
			</a>
			<span>{{this.[1]}}</span>
		</li>
	{{/each}}
</ol>